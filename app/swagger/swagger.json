{
  "swagger": "2.0",
  "info": {
    "title": "API de Usuários",
    "version": "1.0.0",
    "description": "API Flask MVC com Swagger"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "get": {
        "summary": "Lista usuários",
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "summary": "Cria usuário",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": { "type": "string", "example": "Carlos" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Usuário criado" },
          "400": { "description": "Dados inválidos" }
        }
      }
    },
    "/users/{id}": {
      "put": {
        "summary": "Atualiza usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "Novo Nome" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Usuário atualizado" },
          "404": { "description": "Usuário não encontrado" }
        }
      },
      "delete": {
        "summary": "Remove usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Usuário removido" },
          "404": { "description": "Usuário não encontrado" }
        }
      }
    }
  }
}
