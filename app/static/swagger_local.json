{
  "swagger": "2.0",
  "info": {
    "title": "PyStore API - Local Development",
    "version": "1.0.0",
    "description": "API para desenvolvimento local com upload de arquivos"
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "consumes": ["application/json", "multipart/form-data"],
  "produces": ["application/json"],
  
  "paths": {
    "/produtos": {
      "post": {
        "summary": "Cria produto com upload de imagem",
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "nome",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "descricao",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "img",
            "in": "formData",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "201": {
            "description": "Produto criado com imagem"
          }
        }
      }
    }
  }
}
