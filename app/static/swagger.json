{
  "swagger": "2.0",
  "info": {
    "title": "PyStore API",
    "version": "1.0.0",
    "description": "API Flask para gerenciamento de produtos"
  },

  "basePath": "/api",
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/produtos": {
      "get": {
        "summary": "Lista produtos",
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": { "type": "string" },
                  "nome": { "type": "string" },
                  "descricao": { "type": "string" },
                  "img": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cria produto",
        "description": "Cria novo produto com URL da imagem",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["nome"],
              "properties": {
                "nome": { "type": "string" },
                "descricao": { "type": "string" },
                "image_url": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Produto criado"
          },
          "400": {
            "description": "Dados inv√°lidos"
          }
        }
      }
    }
  }
}
